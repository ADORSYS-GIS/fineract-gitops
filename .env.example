# =============================================================================
# Fineract GitOps - Docker Compose Environment Variables
# =============================================================================
# Copy this file to .env and adjust values as needed:
#   cp .env.example .env
# =============================================================================

# =============================================================================
# PostgreSQL
# =============================================================================
POSTGRES_USER=fineract
POSTGRES_PASSWORD=fineract_password
POSTGRES_DB=fineract_default

# Keycloak database (created by init script)
KEYCLOAK_DB_USER=keycloak
KEYCLOAK_DB_PASSWORD=keycloak_password
KEYCLOAK_DB_NAME=keycloak

# Customer self-service database (created by init script)
CUSTOMER_REG_DB_USER=customer_reg
CUSTOMER_REG_DB_PASSWORD=customer_reg_password
CUSTOMER_REG_DB_NAME=customer_registration

# Asset service database (created by init script)
ASSET_SERVICE_DB_USER=asset_service
ASSET_SERVICE_DB_PASSWORD=asset_service_password
ASSET_SERVICE_DB_NAME=asset_service

# =============================================================================
# Redis
# =============================================================================
REDIS_PASSWORD=redis_dev_password

# =============================================================================
# Fineract
# =============================================================================
FINERACT_IMAGE=ghcr.io/adorsys-gis/fineract:5aa35aa15
FINERACT_HIKARI_JDBC_URL=jdbc:postgresql://postgres:5432/fineract_tenants
FINERACT_HIKARI_USERNAME=fineract
FINERACT_HIKARI_PASSWORD=fineract_password
FINERACT_DEFAULT_TENANTDB_HOSTNAME=postgres
FINERACT_DEFAULT_TENANTDB_PORT=5432
FINERACT_DEFAULT_TENANTDB_UID=fineract
FINERACT_DEFAULT_TENANTDB_PWD=fineract_password

# =============================================================================
# Keycloak
# =============================================================================
KEYCLOAK_IMAGE=quay.io/keycloak/keycloak:24.0.5
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# =============================================================================
# OAuth2-Proxy
# =============================================================================
OAUTH2_PROXY_IMAGE=quay.io/oauth2-proxy/oauth2-proxy:v7.13.0
OAUTH2_PROXY_CLIENT_ID=oauth2-proxy
OAUTH2_PROXY_CLIENT_SECRET=oauth2-proxy-secret
# Generate with: python3 -c "import os,base64; print(base64.urlsafe_b64encode(os.urandom(32)).decode())"
OAUTH2_PROXY_COOKIE_SECRET=YWJjZGVmZ2hpamtsbW5vcHFyc3R1dnd4

# =============================================================================
# Keycloak Realm Config (used by keycloak-config-cli for realm import)
# =============================================================================
KC_ADMIN_CLI_SECRET=admin-cli-secret
KC_FINERACT_API_SECRET=fineract-api-secret
KC_FINERACT_DATA_LOADER_SECRET=fineract-data-loader-secret

# =============================================================================
# Payment Gateway Service
# =============================================================================
PAYMENT_GATEWAY_IMAGE=ghcr.io/adorsys-gis/fineract-apps/payment-gateway-service:latest
KEYCLOAK_PGW_CLIENT_ID=payment-gateway
KEYCLOAK_PGW_CLIENT_SECRET=payment-gateway-secret
FINERACT_API_USERNAME=mifos
FINERACT_API_PASSWORD=password

# MTN MoMo (sandbox placeholders)
MTN_COLLECTION_KEY=placeholder
MTN_DISBURSEMENT_KEY=placeholder
MTN_API_USER_ID=placeholder
MTN_API_KEY=placeholder
MTN_GL_ACCOUNT_CODE=43

# Orange Money (sandbox placeholders)
ORANGE_CLIENT_ID=placeholder
ORANGE_CLIENT_SECRET=placeholder
ORANGE_MERCHANT_CODE=placeholder
ORANGE_GL_ACCOUNT_CODE=44

# CinetPay (sandbox placeholders)
CINETPAY_API_KEY=placeholder
CINETPAY_SITE_ID=placeholder
CINETPAY_API_PASSWORD=placeholder

# =============================================================================
# User Sync Service
# =============================================================================
USER_SYNC_IMAGE=ghcr.io/adorsys-gis/fineract-apps/user-sync-service:2a9a06c
KEYCLOAK_USS_CLIENT_ID=user-sync-service
KEYCLOAK_USS_CLIENT_SECRET=user-sync-service-secret

# =============================================================================
# Customer Self-Service
# =============================================================================
CUSTOMER_SELF_SERVICE_IMAGE=ghcr.io/adorsys-gis/fineract-apps/customer-self-service:latest
KEYCLOAK_CSS_CLIENT_ID=customer-registration
KEYCLOAK_CSS_CLIENT_SECRET=customer-registration-secret

# =============================================================================
# Asset Service
# =============================================================================
ASSET_SERVICE_IMAGE=ghcr.io/adorsys-gis/fineract-apps/asset-service:latest
KEYCLOAK_ASSET_CLIENT_ID=asset-service
KEYCLOAK_ASSET_CLIENT_SECRET=asset-service-secret

# =============================================================================
# Frontend App Images
# =============================================================================
WEB_APP_IMAGE=ghcr.io/adorsys-gis/mifos-web-app:deploy-key-2c4f10c
SELF_SERVICE_APP_IMAGE=ghcr.io/adorsys-gis/fineract-apps/self-service-app:latest
ADMIN_APP_IMAGE=ghcr.io/adorsys-gis/fineract-apps/admin-app:latest
ACCOUNT_MANAGER_APP_IMAGE=ghcr.io/adorsys-gis/fineract-apps/account-manager-app:latest
ASSET_MANAGER_APP_IMAGE=ghcr.io/adorsys-gis/fineract-apps/asset-manager-app:latest
ACCOUNTING_APP_IMAGE=ghcr.io/adorsys-gis/fineract-accounting-app:fix-api-v1
REPORTING_APP_IMAGE=ghcr.io/adorsys-gis/fineract-reporting-app:fix-api-v1
BRANCH_MANAGER_APP_IMAGE=ghcr.io/adorsys-gis/fineract-apps/branchmanager-app:latest
CASHIER_APP_IMAGE=ghcr.io/adorsys-gis/fineract-apps/cashier-app:latest

# =============================================================================
# Monitoring (optional, used with --profile monitoring)
# =============================================================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
