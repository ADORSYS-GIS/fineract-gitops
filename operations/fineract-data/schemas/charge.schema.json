{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Fineract Charge",
  "description": "Schema for validating Fineract charge/fee configuration",
  "type": "object",
  "required": ["apiVersion", "kind", "metadata", "spec"],
  "properties": {
    "apiVersion": {
      "type": "string",
      "enum": ["fineract.apache.org/v1"]
    },
    "kind": {
      "type": "string",
      "enum": ["Charge"]
    },
    "metadata": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$"
        },
        "labels": {
          "type": "object",
          "additionalProperties": {"type": "string"}
        }
      }
    },
    "spec": {
      "type": "object",
      "required": ["name", "chargeAppliesTo", "chargeTimeType", "chargeCalculationType"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100
        },
        "chargeAppliesTo": {
          "type": "string",
          "enum": ["LOAN", "SAVINGS", "CLIENT", "SHARES"]
        },
        "chargeTimeType": {
          "type": "string",
          "enum": ["DISBURSEMENT", "SPECIFIED_DUE_DATE", "SAVINGS_ACTIVATION", "WITHDRAWAL_FEE", "ANNUAL_FEE", "MONTHLY_FEE", "INSTALLMENT_FEE", "OVERDUE_INSTALLMENT", "OVERDRAFT_FEE", "WEEKLY_FEE", "TRANCHE_DISBURSEMENT"]
        },
        "chargeCalculationType": {
          "type": "string",
          "enum": ["FLAT", "PERCENT_OF_AMOUNT", "PERCENT_OF_AMOUNT_AND_INTEREST", "PERCENT_OF_INTEREST", "PERCENT_OF_DISBURSEMENT_AMOUNT"]
        },
        "currency": {
          "type": "string",
          "pattern": "^[A-Z]{3}$"
        },
        "amount": {
          "type": "number",
          "minimum": 0
        },
        "active": {
          "type": "boolean",
          "default": true
        },
        "penalty": {
          "type": "boolean",
          "default": false
        },
        "feeInterval": {
          "type": "integer",
          "minimum": 1
        },
        "feeFrequency": {
          "type": "string",
          "enum": ["DAYS", "WEEKS", "MONTHS", "YEARS"]
        }
      }
    }
  }
}
