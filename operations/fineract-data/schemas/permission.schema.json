{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Fineract Permission",
  "description": "Schema for validating Fineract permission configuration",
  "type": "object",
  "required": ["apiVersion", "kind", "metadata", "spec"],
  "properties": {
    "apiVersion": {
      "type": "string",
      "enum": ["fineract.apache.org/v1"]
    },
    "kind": {
      "type": "string",
      "enum": ["Permission"]
    },
    "metadata": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$"
        },
        "labels": {
          "type": "object",
          "additionalProperties": {"type": "string"}
        }
      }
    },
    "spec": {
      "type": "object",
      "required": ["name", "code", "grouping"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Permission display name"
        },
        "description": {
          "type": "string",
          "description": "Permission description"
        },
        "code": {
          "type": "string",
          "minLength": 1,
          "pattern": "^[A-Z_]+$",
          "description": "Permission code (e.g., 'READ_CLIENT', 'CREATE_LOAN')"
        },
        "grouping": {
          "type": "string",
          "minLength": 1,
          "description": "Permission grouping/category"
        },
        "entityName": {
          "type": "string",
          "description": "Entity this permission applies to"
        },
        "actionName": {
          "type": "string",
          "enum": ["READ", "CREATE", "UPDATE", "DELETE", "APPROVE", "DISBURSE", "REPAYMENT"],
          "description": "Action type"
        }
      }
    }
  }
}
