{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Fineract Payment Type",
  "description": "Schema for validating Fineract payment type configuration",
  "type": "object",
  "required": ["apiVersion", "kind", "metadata", "spec"],
  "properties": {
    "apiVersion": {
      "type": "string",
      "enum": ["fineract.apache.org/v1"]
    },
    "kind": {
      "type": "string",
      "enum": ["Paymenttype"]
    },
    "metadata": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$"
        },
        "labels": {
          "type": "object",
          "additionalProperties": {"type": "string"}
        }
      }
    },
    "spec": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Payment type name"
        },
        "description": {
          "type": "string",
          "description": "Payment type description"
        },
        "isCashPayment": {
          "type": "boolean",
          "default": false,
          "description": "Whether this is a cash payment type"
        },
        "position": {
          "type": "integer",
          "minimum": 1,
          "default": 1,
          "description": "Display position/order of this payment type"
        },
        "codeName": {
          "type": "string",
          "minLength": 1,
          "description": "Optional code name for the payment type"
        }
      }
    }
  }
}
