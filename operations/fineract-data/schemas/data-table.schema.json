{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Fineract Data Table",
  "description": "Schema for validating Fineract data table configuration",
  "type": "object",
  "required": ["apiVersion", "kind", "metadata", "spec"],
  "properties": {
    "apiVersion": {
      "type": "string",
      "enum": ["fineract.apache.org/v1"]
    },
    "kind": {
      "type": "string",
      "enum": ["Datatable"]
    },
    "metadata": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$"
        },
        "labels": {
          "type": "object",
          "additionalProperties": {"type": "string"}
        }
      }
    },
    "spec": {
      "type": "object",
      "required": ["name", "apptableName", "columns"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Data table name"
        },
        "description": {
          "type": "string",
          "description": "Data table description"
        },
        "apptableName": {
          "type": "string",
          "enum": ["m_client", "m_loan", "m_savings_account", "m_group", "m_center", "m_office"],
          "description": "Application table to attach this data table to"
        },
        "multiRow": {
          "type": "boolean",
          "default": false,
          "description": "Whether multiple rows are allowed"
        },
        "columns": {
          "type": "array",
          "minItems": 1,
          "description": "List of custom columns",
          "items": {
            "type": "object",
            "required": ["name", "type"],
            "properties": {
              "name": {
                "type": "string",
                "minLength": 1,
                "description": "Column name"
              },
              "type": {
                "type": "string",
                "enum": ["String", "Number", "Boolean", "Date", "DateTime", "Text", "Dropdown"],
                "description": "Column data type"
              },
              "mandatory": {
                "type": "boolean",
                "default": false,
                "description": "Whether this column is mandatory"
              },
              "length": {
                "type": "integer",
                "minimum": 1,
                "description": "Maximum length for String type"
              }
            }
          }
        }
      }
    }
  }
}
