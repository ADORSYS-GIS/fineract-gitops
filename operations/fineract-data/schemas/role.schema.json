{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Fineract Role",
  "description": "Schema for validating Fineract role configuration",
  "type": "object",
  "required": ["apiVersion", "kind", "metadata", "spec"],
  "properties": {
    "apiVersion": {"type": "string", "enum": ["fineract.apache.org/v1"]},
    "kind": {"type": "string", "enum": ["Role"]},
    "metadata": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {"type": "string", "pattern": "^[a-z0-9-]+$"},
        "labels": {"type": "object", "additionalProperties": {"type": "string"}}
      }
    },
    "spec": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100,
          "description": "Role name"
        },
        "description": {
          "type": "string",
          "maxLength": 500,
          "description": "Role description"
        },
        "disabled": {
          "type": "boolean",
          "default": false,
          "description": "Whether this role is disabled"
        },
        "permissions": {
          "type": "array",
          "description": "List of permissions for this role",
          "items": {
            "type": "object",
            "required": ["code"],
            "properties": {
              "grouping": {
                "type": "string",
                "description": "Permission grouping/category (for documentation)"
              },
              "code": {
                "type": "string",
                "minLength": 1,
                "description": "Permission code (e.g., 'READ_LOAN', 'CREATE_CLIENT')"
              }
            }
          }
        }
      }
    }
  }
}
