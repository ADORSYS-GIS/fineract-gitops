{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Fineract Financial Activity Mapping",
  "description": "Schema for validating Fineract financial activity mapping configuration",
  "type": "object",
  "required": ["apiVersion", "kind", "metadata", "spec"],
  "properties": {
    "apiVersion": {
      "type": "string",
      "enum": ["fineract.apache.org/v1"]
    },
    "kind": {
      "type": "string",
      "enum": ["Financialactivitymapping"]
    },
    "metadata": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$"
        },
        "labels": {
          "type": "object",
          "additionalProperties": {"type": "string"}
        }
      }
    },
    "spec": {
      "type": "object",
      "required": ["financialActivityName", "glAccountCode"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Mapping name"
        },
        "description": {
          "type": "string",
          "description": "Mapping description"
        },
        "financialActivityName": {
          "type": "string",
          "minLength": 1,
          "description": "Financial activity name to map"
        },
        "glAccountCode": {
          "type": "string",
          "minLength": 1,
          "description": "GL account code to map to"
        }
      }
    }
  }
}
