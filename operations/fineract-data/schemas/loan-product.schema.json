{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Fineract Loan Product",
  "description": "Schema for Fineract loan product configuration",
  "type": "object",
  "required": ["apiVersion", "kind", "metadata", "spec"],
  "properties": {
    "apiVersion": {
      "type": "string",
      "enum": ["fineract.apache.org/v1"],
      "description": "API version"
    },
    "kind": {
      "type": "string",
      "enum": ["LoanProduct"],
      "description": "Resource kind"
    },
    "metadata": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$",
          "description": "Unique identifier (kebab-case)"
        },
        "labels": {
          "type": "object",
          "additionalProperties": {"type": "string"}
        },
        "annotations": {
          "type": "object",
          "additionalProperties": {"type": "string"}
        }
      }
    },
    "spec": {
      "type": "object",
      "required": ["name", "currency", "principal", "interestRate", "numberOfRepayments"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 3,
          "maxLength": 100
        },
        "shortName": {
          "type": "string",
          "maxLength": 20
        },
        "description": {
          "type": "string"
        },
        "currency": {
          "type": "string",
          "pattern": "^[A-Z]{3}$",
          "description": "ISO 4217 currency code"
        },
        "digitsAfterDecimal": {
          "type": "integer",
          "minimum": 0,
          "maximum": 6,
          "default": 2
        },
        "inMultiplesOf": {
          "type": "number",
          "minimum": 0
        },
        "principal": {
          "type": "object",
          "required": ["min", "default", "max"],
          "properties": {
            "min": {"type": "number", "minimum": 0},
            "default": {"type": "number"},
            "max": {"type": "number"}
          }
        },
        "interestRate": {
          "type": "object",
          "required": ["min", "default", "max", "type"],
          "properties": {
            "min": {"type": "number", "minimum": 0, "maximum": 100},
            "default": {"type": "number", "minimum": 0, "maximum": 100},
            "max": {"type": "number", "minimum": 0, "maximum": 100},
            "type": {
              "type": "string",
              "enum": ["FLAT", "DECLINING_BALANCE"]
            }
          }
        },
        "numberOfRepayments": {
          "type": "object",
          "required": ["min", "default", "max"],
          "properties": {
            "min": {"type": "integer", "minimum": 1},
            "default": {"type": "integer"},
            "max": {"type": "integer"}
          }
        },
        "repaymentEvery": {
          "type": "integer",
          "minimum": 1,
          "default": 1
        },
        "repaymentFrequency": {
          "type": "string",
          "enum": ["DAYS", "WEEKS", "MONTHS", "YEARS"],
          "default": "MONTHS"
        },
        "interestCalculationPeriod": {
          "type": "string",
          "enum": ["SAME_AS_REPAYMENT_PERIOD", "DAILY"]
        },
        "amortizationType": {
          "type": "string",
          "enum": ["EQUAL_INSTALLMENTS", "EQUAL_PRINCIPAL"]
        },
        "allowPartialPeriodInterestCalculation": {
          "type": "boolean",
          "default": true
        },
        "charges": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["feeRef", "timing"],
            "properties": {
              "feeRef": {"type": "string"},
              "timing": {
                "type": "string",
                "enum": ["DISBURSEMENT", "SPECIFIED_DUE_DATE", "INSTALLMENT_FEE", "OVERDUE"]
              },
              "mandatory": {"type": "boolean"}
            }
          }
        },
        "accounting": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["NONE", "CASH", "ACCRUAL_PERIODIC", "ACCRUAL_UPFRONT"]
            },
            "fundSource": {"type": "integer"},
            "loanPortfolio": {"type": "integer"},
            "transferInSuspense": {"type": "integer"},
            "interestOnLoans": {"type": "integer"},
            "incomeFromFees": {"type": "integer"},
            "incomeFromPenalties": {"type": "integer"},
            "overpaymentLiability": {"type": "integer"}
          }
        }
      }
    }
  }
}
