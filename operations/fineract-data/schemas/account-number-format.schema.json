{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Fineract Account Number Format",
  "description": "Schema for validating Fineract account number format configuration",
  "type": "object",
  "required": ["apiVersion", "kind", "metadata", "spec"],
  "properties": {
    "apiVersion": {
      "type": "string",
      "enum": ["fineract.apache.org/v1"]
    },
    "kind": {
      "type": "string",
      "enum": ["Accountnumberformat"]
    },
    "metadata": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$"
        },
        "labels": {
          "type": "object",
          "additionalProperties": {"type": "string"}
        }
      }
    },
    "spec": {
      "type": "object",
      "required": ["name", "accountType"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Account number format name"
        },
        "description": {
          "type": "string",
          "description": "Account number format description"
        },
        "accountType": {
          "type": "string",
          "enum": ["CLIENT", "LOAN", "SAVINGS", "CENTER", "GROUP"],
          "description": "Type of account this format applies to"
        },
        "prefixType": {
          "type": "string",
          "enum": ["NONE", "OFFICE_NAME", "CLIENT_TYPE", "LOAN_PRODUCT_SHORT_NAME"],
          "default": "NONE",
          "description": "Type of prefix to use for account numbers"
        },
        "startingValue": {
          "type": "integer",
          "minimum": 1,
          "description": "Starting number value for account number generation"
        }
      }
    }
  }
}
