{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Fineract Teller",
  "description": "Schema for validating Fineract teller configuration",
  "type": "object",
  "required": ["apiVersion", "kind", "metadata", "spec"],
  "properties": {
    "apiVersion": {
      "type": "string",
      "enum": ["fineract.apache.org/v1"]
    },
    "kind": {
      "type": "string",
      "enum": ["Teller"]
    },
    "metadata": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$"
        },
        "labels": {
          "type": "object",
          "additionalProperties": {"type": "string"}
        }
      }
    },
    "spec": {
      "type": "object",
      "required": ["name", "officeName", "startDate"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Teller name"
        },
        "officeName": {
          "type": "string",
          "minLength": 1,
          "description": "Office name where this teller is located"
        },
        "description": {
          "type": "string",
          "description": "Teller description"
        },
        "status": {
          "type": "string",
          "enum": ["ACTIVE", "INACTIVE", "CLOSED"],
          "default": "ACTIVE",
          "description": "Teller operational status"
        },
        "startDate": {
          "type": "string",
          "format": "date",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
          "description": "Teller operation start date (YYYY-MM-DD)"
        },
        "endDate": {
          "type": "string",
          "format": "date",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
          "description": "Teller operation end date (YYYY-MM-DD)"
        }
      }
    }
  }
}
