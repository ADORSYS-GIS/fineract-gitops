{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Fineract Delinquency Bucket",
  "description": "Schema for validating Fineract delinquency bucket configuration",
  "type": "object",
  "required": ["apiVersion", "kind", "metadata", "spec"],
  "properties": {
    "apiVersion": {
      "type": "string",
      "enum": ["fineract.apache.org/v1"]
    },
    "kind": {
      "type": "string",
      "enum": ["Delinquencybucket"]
    },
    "metadata": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$"
        },
        "labels": {
          "type": "object",
          "additionalProperties": {"type": "string"}
        }
      }
    },
    "spec": {
      "type": "object",
      "required": ["name", "ranges"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Delinquency bucket name"
        },
        "description": {
          "type": "string",
          "description": "Delinquency bucket description"
        },
        "ranges": {
          "type": "array",
          "minItems": 1,
          "description": "List of delinquency ranges",
          "items": {
            "type": "object",
            "required": ["classification", "minimumAgeDays"],
            "properties": {
              "classification": {
                "type": "string",
                "minLength": 1,
                "description": "Range classification (e.g., '1-30 days', '31-60 days')"
              },
              "minimumAgeDays": {
                "type": "integer",
                "minimum": 0,
                "description": "Minimum age in days for this range"
              },
              "maximumAgeDays": {
                "type": "integer",
                "minimum": 0,
                "description": "Maximum age in days for this range (optional)"
              }
            }
          }
        }
      }
    }
  }
}
