{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Fineract Maker Checker",
  "description": "Schema for validating Fineract maker checker configuration",
  "type": "object",
  "required": ["apiVersion", "kind", "metadata", "spec"],
  "properties": {
    "apiVersion": {
      "type": "string",
      "enum": ["fineract.apache.org/v1"]
    },
    "kind": {
      "type": "string",
      "enum": ["Makerchecker"]
    },
    "metadata": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$"
        },
        "labels": {
          "type": "object",
          "additionalProperties": {"type": "string"}
        }
      }
    },
    "spec": {
      "type": "object",
      "required": ["name", "entity", "action"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Maker-checker permission name"
        },
        "description": {
          "type": "string",
          "description": "Maker-checker permission description"
        },
        "entity": {
          "type": "string",
          "minLength": 1,
          "description": "Entity type (e.g., 'CLIENT', 'LOAN', 'SAVINGS')"
        },
        "action": {
          "type": "string",
          "enum": ["CREATE", "UPDATE", "DELETE", "APPROVE", "REJECT"],
          "description": "Action requiring maker-checker approval"
        }
      }
    }
  }
}
