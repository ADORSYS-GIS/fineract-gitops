{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Fineract Collateral Type",
  "description": "Schema for validating Fineract collateral type configuration",
  "type": "object",
  "required": ["apiVersion", "kind", "metadata", "spec"],
  "properties": {
    "apiVersion": {
      "type": "string",
      "enum": ["fineract.apache.org/v1"]
    },
    "kind": {
      "type": "string",
      "enum": ["Collateraltype"]
    },
    "metadata": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$"
        },
        "labels": {
          "type": "object",
          "additionalProperties": {"type": "string"}
        }
      }
    },
    "spec": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Collateral type name"
        },
        "description": {
          "type": "string",
          "description": "Collateral type description"
        },
        "currency": {
          "type": "string",
          "pattern": "^[A-Z]{3}$",
          "default": "XAF",
          "description": "Currency code (ISO 4217)"
        },
        "quality": {
          "type": "string",
          "enum": ["GOOD", "FAIR", "POOR"],
          "default": "GOOD",
          "description": "Quality standard of the collateral"
        },
        "unitType": {
          "type": "string",
          "enum": ["SINGLE", "MULTIPLE", "PER_UNIT"],
          "default": "SINGLE",
          "description": "Unit type for valuation"
        },
        "basePrice": {
          "type": "number",
          "minimum": 0,
          "description": "Base price for valuation"
        },
        "pctToBase": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "Percentage to base price for valuation"
        }
      }
    }
  }
}
