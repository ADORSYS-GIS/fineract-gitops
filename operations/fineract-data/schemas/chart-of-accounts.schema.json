{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Fineract Chart Of Accounts",
  "description": "Schema for validating Fineract chart of accounts configuration",
  "type": "object",
  "required": ["apiVersion", "kind", "metadata", "spec"],
  "properties": {
    "apiVersion": {
      "type": "string",
      "enum": ["fineract.apache.org/v1"]
    },
    "kind": {
      "type": "string",
      "enum": ["Chartofaccounts"]
    },
    "metadata": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$"
        },
        "labels": {
          "type": "object",
          "additionalProperties": {"type": "string"}
        }
      }
    },
    "spec": {
      "type": "object",
      "required": ["name", "glCode", "type", "usage"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "GL account name"
        },
        "glCode": {
          "type": "string",
          "minLength": 1,
          "description": "GL account code"
        },
        "type": {
          "type": "string",
          "enum": ["Asset", "Liability", "Equity", "Income", "Expense"],
          "description": "GL account type"
        },
        "usage": {
          "type": "string",
          "enum": ["Detail", "Header"],
          "description": "Account usage: Detail for transactions, Header for grouping"
        },
        "manualEntriesAllowed": {
          "type": "boolean",
          "default": true,
          "description": "Whether manual journal entries are allowed"
        },
        "description": {
          "type": "string",
          "description": "GL account description"
        },
        "parentGLCode": {
          "type": "string",
          "description": "Parent GL account code (for hierarchical structure)"
        },
        "tag": {
          "type": "string",
          "description": "Tag name for categorization"
        }
      }
    }
  }
}
