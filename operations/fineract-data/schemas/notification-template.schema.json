{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Fineract Notification Template",
  "description": "Schema for validating Fineract notification template configuration",
  "type": "object",
  "required": ["apiVersion", "kind", "metadata", "spec"],
  "properties": {
    "apiVersion": {
      "type": "string",
      "enum": ["fineract.apache.org/v1"]
    },
    "kind": {
      "type": "string",
      "enum": ["NotificationTemplate"]
    },
    "metadata": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$"
        },
        "labels": {
          "type": "object",
          "additionalProperties": {"type": "string"}
        }
      }
    },
    "spec": {
      "type": "object",
      "required": ["name", "channel", "eventTrigger", "messageBody"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Template name"
        },
        "channel": {
          "type": "string",
          "enum": ["SMS", "EMAIL"],
          "description": "Notification delivery channel"
        },
        "eventTrigger": {
          "type": "string",
          "minLength": 1,
          "description": "Event that triggers this notification"
        },
        "subject": {
          "type": "string",
          "description": "Email subject (for EMAIL channel)"
        },
        "messageBody": {
          "type": "string",
          "minLength": 1,
          "description": "Message template body with placeholders (e.g., {clientName})"
        },
        "isActive": {
          "type": "boolean",
          "default": true,
          "description": "Whether this template is active"
        },
        "description": {
          "type": "string",
          "description": "Template description"
        }
      }
    }
  }
}
