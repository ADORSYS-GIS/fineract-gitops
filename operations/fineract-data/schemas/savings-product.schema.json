{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Fineract Savings Product",
  "description": "Schema for validating Fineract savings product configuration",
  "type": "object",
  "required": ["apiVersion", "kind", "metadata", "spec"],
  "properties": {
    "apiVersion": {
      "type": "string",
      "enum": ["fineract.apache.org/v1"],
      "description": "API version for Fineract resources"
    },
    "kind": {
      "type": "string",
      "enum": ["SavingsProduct"],
      "description": "Resource type"
    },
    "metadata": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$",
          "description": "Unique identifier in kebab-case format"
        },
        "labels": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      }
    },
    "spec": {
      "type": "object",
      "required": ["name", "currency"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100
        },
        "shortName": {
          "type": "string",
          "maxLength": 50
        },
        "description": {
          "type": "string",
          "maxLength": 500
        },
        "currency": {
          "type": "string",
          "pattern": "^[A-Z]{3}$",
          "description": "ISO 4217 currency code"
        },
        "digitsAfterDecimal": {
          "type": "integer",
          "minimum": 0,
          "maximum": 6,
          "default": 2
        },
        "interestRate": {
          "type": "object",
          "properties": {
            "nominal": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            },
            "compoundingPeriod": {
              "type": "string",
              "enum": ["DAILY", "MONTHLY", "QUARTERLY", "SEMI_ANNUAL", "ANNUAL"]
            },
            "interestPostingPeriod": {
              "type": "string",
              "enum": ["MONTHLY", "QUARTERLY", "BIANNUAL", "ANNUAL"]
            },
            "interestCalculationType": {
              "type": "string",
              "enum": ["DAILY_BALANCE", "AVERAGE_DAILY_BALANCE"]
            }
          }
        },
        "minBalanceForInterestCalculation": {
          "type": "number",
          "minimum": 0
        },
        "minRequiredOpeningBalance": {
          "type": "number",
          "minimum": 0
        },
        "withdrawalFeeForTransfers": {
          "type": "boolean"
        },
        "allowOverdraft": {
          "type": "boolean"
        },
        "overdraftLimit": {
          "type": "number",
          "minimum": 0
        },
        "accounting": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["NONE", "CASH", "ACCRUAL_PERIODIC", "ACCRUAL_UPFRONT"]
            }
          }
        }
      }
    }
  }
}
