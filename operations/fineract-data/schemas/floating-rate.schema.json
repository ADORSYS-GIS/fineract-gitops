{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Fineract Floating Rate",
  "description": "Schema for validating Fineract floating rate configuration",
  "type": "object",
  "required": ["apiVersion", "kind", "metadata", "spec"],
  "properties": {
    "apiVersion": {
      "type": "string",
      "enum": ["fineract.apache.org/v1"]
    },
    "kind": {
      "type": "string",
      "enum": ["Floatingrate"]
    },
    "metadata": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$"
        },
        "labels": {
          "type": "object",
          "additionalProperties": {"type": "string"}
        }
      }
    },
    "spec": {
      "type": "object",
      "required": ["name", "ratePeriods"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Floating rate name"
        },
        "description": {
          "type": "string",
          "description": "Floating rate description"
        },
        "isBaseLendingRate": {
          "type": "boolean",
          "default": false,
          "description": "Whether this is the base lending rate"
        },
        "isActive": {
          "type": "boolean",
          "default": true,
          "description": "Whether this rate is active"
        },
        "ratePeriods": {
          "type": "array",
          "minItems": 1,
          "description": "List of rate periods with effective dates",
          "items": {
            "type": "object",
            "required": ["fromDate", "interestRate"],
            "properties": {
              "fromDate": {
                "type": "string",
                "format": "date",
                "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
                "description": "Effective date for this rate (YYYY-MM-DD)"
              },
              "interestRate": {
                "type": "number",
                "minimum": 0,
                "description": "Interest rate percentage"
              },
              "isDifferentialToBaseLendingRate": {
                "type": "boolean",
                "default": false,
                "description": "Whether rate is differential to base lending rate"
              }
            }
          }
        }
      }
    }
  }
}
