{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Fineract Holiday",
  "description": "Schema for validating Fineract holiday configuration",
  "type": "object",
  "required": ["apiVersion", "kind", "metadata", "spec"],
  "properties": {
    "apiVersion": {
      "type": "string",
      "enum": ["fineract.apache.org/v1"]
    },
    "kind": {
      "type": "string",
      "enum": ["Holiday"]
    },
    "metadata": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$"
        },
        "labels": {
          "type": "object",
          "additionalProperties": {"type": "string"}
        }
      }
    },
    "spec": {
      "type": "object",
      "required": ["name", "fromDate", "toDate"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Holiday name"
        },
        "description": {
          "type": "string",
          "description": "Holiday description"
        },
        "fromDate": {
          "type": "string",
          "format": "date",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
          "description": "Holiday start date (YYYY-MM-DD)"
        },
        "toDate": {
          "type": "string",
          "format": "date",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
          "description": "Holiday end date (YYYY-MM-DD)"
        },
        "repaymentsRescheduledTo": {
          "type": "string",
          "format": "date",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
          "description": "Date to reschedule repayments to (YYYY-MM-DD)"
        },
        "offices": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "minItems": 1,
          "description": "List of office names this holiday applies to"
        }
      }
    }
  }
}
