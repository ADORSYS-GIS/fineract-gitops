{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Fineract Report",
  "description": "Schema for validating Fineract report configuration",
  "type": "object",
  "required": ["apiVersion", "kind", "metadata", "spec"],
  "properties": {
    "apiVersion": {
      "type": "string",
      "enum": ["fineract.apache.org/v1"]
    },
    "kind": {
      "type": "string",
      "enum": ["FinancialReport", "Report"]
    },
    "metadata": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$"
        },
        "labels": {
          "type": "object",
          "additionalProperties": {"type": "string"}
        }
      }
    },
    "spec": {
      "type": "object",
      "required": ["reportName", "reportType"],
      "properties": {
        "reportName": {
          "type": "string",
          "minLength": 1,
          "description": "Report display name"
        },
        "reportType": {
          "type": "string",
          "minLength": 1,
          "description": "Report type/category"
        },
        "reportSubtype": {
          "type": "string",
          "description": "Report subtype/subcategory"
        },
        "reportCategory": {
          "type": "string",
          "description": "Report category for grouping"
        },
        "useReport": {
          "type": "boolean",
          "default": true,
          "description": "Whether this report should be active"
        },
        "reportSql": {
          "type": "string",
          "minLength": 1,
          "description": "SQL query for the report"
        },
        "reportParameters": {
          "type": "array",
          "description": "List of report parameters",
          "items": {
            "type": "object",
            "required": ["parameterName", "parameterType"],
            "properties": {
              "parameterName": {
                "type": "string",
                "minLength": 1,
                "description": "Parameter name"
              },
              "parameterType": {
                "type": "string",
                "enum": ["string", "number", "date", "boolean"],
                "description": "Parameter data type"
              },
              "parameterLabel": {
                "type": "string",
                "description": "Parameter display label"
              },
              "parameterRequired": {
                "type": "boolean",
                "default": false,
                "description": "Whether parameter is required"
              }
            }
          }
        },
        "description": {
          "type": "string",
          "description": "Report description"
        }
      }
    }
  }
}
