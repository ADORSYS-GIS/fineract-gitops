# Payment Gateway Secrets Template
#
# This file contains placeholder values for payment gateway credentials.
# DO NOT commit the filled-in version to Git!
#
# Usage:
# 1. Copy this file: cp payment-gateway-secrets.yaml.template payment-gateway-secrets.yaml
# 2. Fill in actual values (replace CHANGE_ME placeholders)
# 3. Seal with kubeseal (see docs/PAYMENT_GATEWAY_SECRETS.md for instructions)
# 4. Delete the plaintext file: rm payment-gateway-secrets.yaml
#
apiVersion: v1
kind: Secret
metadata:
  name: payment-gateway-secrets
  namespace: fineract-dev
  labels:
    app: payment-gateway-service
    app.kubernetes.io/name: payment-gateway-service
    app.kubernetes.io/component: backend
    app.kubernetes.io/part-of: self-service
type: Opaque
stringData:
  # ===========================================
  # MTN MoMo API Credentials
  # Obtain from: https://momodeveloper.mtn.com
  # ===========================================

  # Subscription key for Collection API (deposits)
  mtn-collection-key: "CHANGE_ME"

  # Subscription key for Disbursement API (withdrawals)
  mtn-disbursement-key: "CHANGE_ME"

  # API User UUID (created via provisioning endpoint)
  mtn-api-user-id: "CHANGE_ME"

  # API Key (generated after creating API user)
  mtn-api-key: "CHANGE_ME"

  # Fineract GL Account code for MTN transactions
  mtn-gl-account-code: "43"

  # ===========================================
  # Orange Money API Credentials
  # Obtain from: https://developer.orange.com
  # ===========================================

  # OAuth2 Client ID for Orange Money API
  orange-client-id: "CHANGE_ME"

  # OAuth2 Client Secret
  orange-client-secret: "CHANGE_ME"

  # Merchant code assigned by Orange
  orange-merchant-code: "CHANGE_ME"

  # Fineract GL Account code for Orange transactions
  orange-gl-account-code: "44"

  # ===========================================
  # CinetPay API Credentials (Gateway)
  # Obtain from: https://my.cinetpay.com
  # NOTE: CinetPay routes to MTN/Orange - no separate GL account needed
  # GL mapping is dynamic based on payment_method from callback
  # ===========================================

  # CinetPay API Key
  cinetpay-api-key: "CHANGE_ME"

  # CinetPay Site ID (merchant identifier)
  cinetpay-site-id: "CHANGE_ME"

  # CinetPay API Password (for transfer/disbursement auth)
  cinetpay-api-password: "CHANGE_ME"
